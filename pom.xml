<?xml version="1.0" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.flowref</groupId>
    <artifactId>parent</artifactId>
    <name>flowref</name>
    <version>1.0.0.0</version>
    <packaging>pom</packaging>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <javassist.version>3.20.0-GA</javassist.version>
        <jackson.version>2.8.6</jackson.version>
        <junit.version>4.1</junit.version>
        <mockito.version>1.10.19</mockito.version>
        <powermock.version>1.6.6</powermock.version>
        <java.version>1.8</java.version>
        <maven-jar-plugin.version>2.5</maven-jar-plugin.version>
    </properties>

    <scm>
        <connection>scm:git:git@github.com:flowref/flowref.git</connection>
        <developerConnection>scm:git:git@github.com:flowref/flowref.git</developerConnection>
        <url>git://github.com/flowref/flowref.git</url>
        <tag>HEAD</tag>
    </scm>
    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com//flowref/flowref.git/issues</url>
    </issueManagement>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.flowref</groupId>
                <artifactId>flowref-core</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>com.flowref</groupId>
                <artifactId>flowref-spring</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-databind</artifactId>
                <version>${jackson.version}</version>
            </dependency>

            <!--<dependency>-->
                <!--<groupId>org.javassist</groupId>-->
                <!--<artifactId>javassist</artifactId>-->
                <!--<version>${javassist.version}</version>-->
            <!--</dependency>-->

            <!-- Detects the presence of Log4j 2.x / SLF4J, falling back to {@code java.util.logging}.
            Does not imports other Spring eco-system libraries.
            https://www.youtube.com/watch?v=fBHVYWxCnmA&feature=youtu.be&t=3099
            https://spring.io/blog/2009/12/04/logging-dependencies-in-spring/
            https://github.com/spring-projects/spring-framework/issues/19081
            -->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-jcl</artifactId>
                <version>5.2.2.RELEASE</version>
            </dependency>

            <!-- TEST -->
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-all</artifactId>
                <version>${mockito.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.powermock</groupId>
                <artifactId>powermock-module-junit4</artifactId>
                <version>${powermock.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.powermock</groupId>
                <artifactId>powermock-api-mockito</artifactId>
                <version>${powermock.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>org.apache.logging.log4j</groupId>
                <artifactId>log4j-api</artifactId>
                <version>2.7</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.apache.logging.log4j</groupId>
                <artifactId>log4j-core</artifactId>
                <version>2.7</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.apache.logging.log4j</groupId>
                <artifactId>log4j-slf4j-impl</artifactId>
                <version>2.7</version>
                <scope>test</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>


    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.6.0</version>
                    <configuration>
                        <source>1.8</source>  <!-- Using this to allow lower Java versions. -->
                        <target>1.8</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>2.4</version>
                    <configuration>
                        <archive>
                            <manifest>
                                <addClasspath>false</addClasspath>
                            </manifest>
                            <manifestEntries>
                                <Specification-Title>${project.name}</Specification-Title>
                                <Specification-Vendor>Cristian Donoiu</Specification-Vendor>
                                <Specification-Version>${project.version}</Specification-Version>
                                <Implementation-Title>${project.name}</Implementation-Title>
                                <Implementation-Vendor-Id>com.flowref</Implementation-Vendor-Id>
                                <Implementation-Vendor>Cristian Donoiu</Implementation-Vendor>
                                <Implementation-Version>${project.version}</Implementation-Version>
                                <Build-Date>${maven.build.timestamp}</Build-Date>
                                <Built-By>${user.name}</Built-By>
                            </manifestEntries>
                        </archive>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <!-- Run this to trigger full build. -->
    <profiles>
        <profile>
            <id>buildChilds</id>
            <activation>
                <property>
                    <name>buildChilds</name>
                </property>
                <!-- Do not use activeByDefault when doing changes in pom because the parent needs to get
                installed in the repository first without building all the childrens.
                <activeByDefault>true</activeByDefault>
                -->
            </activation>
            <modules>
                <module>core</module>
                <module>flowref-spring</module>
            </modules>
        </profile>
    </profiles>

    <modules>
        <module>core</module>
        <module>flowref-spring</module>
    </modules>

</project>